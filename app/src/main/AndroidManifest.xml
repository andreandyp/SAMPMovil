<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.andreandyp.samp"
    android:installLocation="preferExternal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".samp"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".seleccion" android:screenOrientation="portrait"></activity>
        <activity android:name=".estadisticas" android:screenOrientation="landscape"></activity>
        <activity android:name=".estadisticasdel" android:screenOrientation="landscape"></activity>
        <activity android:name=".estadisticassub" android:screenOrientation="landscape"></activity>
    </application>

</manifest>
